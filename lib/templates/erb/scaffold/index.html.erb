<%%- model_class=<%= singular_table_name.titleize %> -%>

<%% content_for :breadcrumb do %>
    <li class="breadcrumb-item">
        <% unless namespaced? %>
            <%%= link_to model_class.model_name.human(count: 2).titleize, <%= plural_table_name %>_path %>
        <% else %>
            <%%= link_to model_class.model_name.human(count: 2).titleize, <%= namespace.underscore %>_<%= plural_table_name %>_path %>
        <% end %>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%%= t('helpers.links.list') %></li>
<%% end %>


<section id="list-example" class="sm-hero__section">
    <h2 class="sm-hero__section-title"><%%= t('helpers.titles.list', :model=> model_class.model_name.human.titleize) %></h2>
    <%%= render 'datatable' %>
</section>