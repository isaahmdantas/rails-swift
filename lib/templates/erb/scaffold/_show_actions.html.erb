<%%- model_class=<%= singular_table_name.camelize %> -%>

<%% remote ||= remote %>

<%% if can? :edit, <%= singular_table_name %> -%>
    <%%= link_to edit_admin_<%= singular_table_name %>_path(<%= singular_table_name %>), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <%% end %>
<%% end %>

<%% if can? :destroy, <%= singular_table_name %> -%>
    <%%= button_to admin_<%= singular_table_name %>_path(<%= singular_table_name %>), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <%% end %>
<%% end %>

<%% if can? :new, <%= singular_table_name.camelize %> -%>
    <%%= link_to new_admin_<%= singular_table_name %>_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <%% end %>
<%% end %>